<html>
        <h2> Customer Addresses </h2> 

        <h3> View Addresses </h3>
        {{#unless customerID}}
          <p style="color: red; margin-left: 1%;"> To View CustomerAddresses - Click "View Addresses" Button In Customers Page </p>
        {{/unless}}
        <div class="form-wrapper">


          <label for="customerID">Customer ID</label>
          <br>
          
          <input disabled type="text" id="customerID" name="customerID" placeholder={{customerID}}>
          <br>

          <table class="query-output-table">

            <thead>
              <tr>
                <th> Address ID </th>
                <th> Name </th>
                <th> Address </th>
                <th> City </th>
                <th> State </th>
                <th> Zip Code </th>
                <th> Country </th>
                <th style="border:0;"> Options </th>
              </tr>
            
            <tbody>
                {{#each customerAddresses}}
                <tr> 
                    <td> {{address_id}} </td>
                    <td> {{first_name}} {{last_name}} </td>
                    <td> {{address1}} {{address2}} </td>
                    <td> {{city}} </td>
                    <td> {{state}} </td>
                    <td> {{zipcode}} </td>
                    <td> {{country}} </td>

                    <td class="query-update-options" style="border:0;"> 
                      <button disabled> Remove Address </button>
                    </td>
                    
                </tr>
                {{/each}}
            </tbody>
          </table>
    </div>
</html>