<!DOCTYPE html>
<html lang="en">

  <h2>Customers</h2>

    <h3>Create New Customer</h3>

    <div class="form-wrapper">

      <form class="insert-row-form" id="insert_customer" action="/Customers" method="post">

        <label for="first_name">*First Name</label> 
        <br>
        <input type="text" id="first_name" name="first_name"> 
        <br>
        <br>

        <label for="last_name">*Last Name</label>
        <br>
        <input type="text" id="last_name" name="last_name"> 
        <br>
        <br>
        
        <label for="date_of_birth">*Date of Birth</label> 
        <br>
        <input type="date" id="date_of_birth" name="date_of_birth"> 
        <br>
        <br>
        
        <label for="email_address">*Email Address</label> 
        <br>
        <input type="email" id="email_address" name="email_address"> 
        <br>
        <br>

        <input type="submit" value="Create Customer">
      </form>
    </div>

    <h3>Customer Search</h3>

    <div class="form-wrapper">

      <h4> Search By Customer ID </h4>

      <form class="search-by-form">
        <input type="number" id="search_customer_id" name="search_customer_id" value="" placeholder="Customer ID">
        <br>
        <br>
        <input type="button" value="Search ID", onclick="searchCustomerByID()">
      </form>

      <div class="sub-form-seperator">
        
      </div>

      <h4> Search By Customer Name </h4>

        <form class="search-by-form" id="search_by_name" action="/Customers/searchName" method="get">

          <label for="searchFirstName"> First Name </label>
          <br>
          <input type="text" id="searchFirstName" name="searchFirstName"/>

          <br>
          <br>

          <label for="searchLastName"> Last Name </label>
          <br>
          <input type="text" id="searchLastName" name="searchLastName"/>
          <br>
          <br>
          <input type="submit" value="Search Customers">
    
        </form>

      <h4> Search Results </h4>

        <table class="query-output-table">

          <thead>
            <tr>
              <th>Customer ID</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Date of Birth</th>
              <th>Cell Number</th>
              <th style="border:0;"> Options </th>
            </tr>
          
          <tbody>
            {{#each customers}}
            <tr> 
                <td>{{customer_id}}</td> 
                <td>{{first_name}}</td> 
                <td>{{last_name}}</td> 
                <td>{{date_of_birth}}</td>
                <td>{{email_address}}</td>
                <td> n/a </td> 
                <td class="query-update-options" style="border:0;"> 
                    <div class="query-update-form">
                        <button> Create Order </button> 
                        <!--
                        <td><button onclick="deletePerson({{id}})">Delete</button></td>
                        <td><a href="/people/{{id}}">Update</a></td>
                        -->
                        <button> View Orders </button>
                        <button> View Payment Methods </button>
                        <button> View Addresses </button>  
                    </div>
                </td>
            </tr>
            {{/each}} 
          </tbody>
        </table>

    </div>
    
</html>